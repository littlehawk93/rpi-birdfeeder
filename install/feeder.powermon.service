[Unit]
Description=rpi birdfeeder power usage monitoring service
After=network.target
StartLimitBurst=10
StartLimitIntervalSec=120

[Service]
Type=simple
Restart=always
RestartSec=60
User=root
ExecStart=/usr/bin/rpi-birdfeeder --config /etc/rpi-birdfeeder/config.json powermon

[Install]
WantedBy=multi-user.target